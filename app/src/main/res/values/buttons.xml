<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- Content styles -->

    <style name="BaseButton" parent="AsapBold.S18">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- ========================================================================= -->

    <style name="Button" parent="BaseButton"/>

    <style name="Button.White" parent="BaseButton">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">#00BBB4</item>
    </style>

    <style name="Button.White.Border" parent="BaseButton">
        <item name="android:background">@drawable/button_border_gray</item>
    </style>

    <style name="Button.Green" parent="BaseButton">
        <item name="android:background">#00BBB4</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Button.Red" parent="BaseButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Button.Cyan" parent="BaseButton">
        <item name="android:background">@drawable/button_cyan_selector</item>
        <item name="android:textColor">@color/text_cta_color</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_material</item>
    </style>

    <style name="Button.Cyan.Selected" parent="BaseButton">
        <item name="android:background">@drawable/button_cyan_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_elevated</item>
    </style>

    <style name="Button.Cyan.Selected.Big" parent="BaseButton">
        <item name="android:background">@drawable/button_cyan_selected_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_elevated</item>
    </style>

    <style name="Button.Blue" parent="BaseButton">
        <item name="android:background">@drawable/button_blue_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_elevated</item>
    </style>

</resources>
